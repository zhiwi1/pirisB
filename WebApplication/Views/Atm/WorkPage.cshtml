@model WebApplication.Models.ViewModels.AtmAccountModel

@{
    ViewBag.Title = "Банкомат";
}

<h2>Банкомат</h2>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-md-4">
        <h4>Баланс</h4>
        <h4>@(Model.Amount)</h4>
    </div>
    <div class="col-md-4">
        <h4>Снять деньги</h4>
        @using (Html.BeginForm("WithdrawMoney", "Atm"))
        {
            @Html.Hidden("creditId", Model.CreditId)
            @Html.Hidden("cardNumber", Model.CardNumber)
            <div class="form-group">
                @Html.Label("Amount", htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-10">
                    @Html.Editor("amount", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("amount", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Повторный пин-код", htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-10">
                    @Html.Editor("pinCode", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("pinCode", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" data-toggle="" value="Снять" class="btn" style="width:200px" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <h4>Перевести деньги</h4>
        @using (Html.BeginForm("TransferMoney", "Atm"))
        {
            @Html.Hidden("creditId", Model.CreditId)
            @Html.Hidden("cardNumber", Model.CardNumber)
            <div class="form-group">
                @Html.Label("Номер счёта", htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-10">
                    @Html.Editor("accountNumber", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("accountNumber", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Amount", htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-10">
                    @Html.Editor("amount", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("amount", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Повторный пин-код", htmlAttributes: new { @class = "control-label col-md-8" })
                <div class="col-md-10">
                    @Html.Editor("pinCode", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("pinCode", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Перевести" class="btn" style="width:200px" />
                </div>
            </div>
        }
    </div>
</div>
